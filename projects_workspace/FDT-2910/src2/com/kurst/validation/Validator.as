------------------------------------------------------------------------------------		// ------------------------------------------------------------------------------------------------------------------------------------------------------------		/**		 * @method		 * @tooltip		 */		static public function emptyString(str : String) : Boolean {			if ( str == null || str == '' )				return false;			return true;		}		/**		 * @method isEmail(addr:String)		 * @tooltip Validate Email		 */		static public function isEmail(addr : String) : Boolean {			var isValue : String = addr;			if (isValue.length < 5) {				return false;			}			// Define invalid characters			// var iChars = "*|,\":<>[]{}`';()&$#%";			var iChars : String = "*|,:<>[]{}`';()&#";			var isLength : Number = isValue.length;			// check for invalid characters			for (var i : Number = 0; i < isLength; i++) {				if (iChars.indexOf(isValue.charAt(i)) != -1) {					return false;				}			}			// check existence of @			var atIndex : int = isValue.lastIndexOf("@");			if (atIndex < 1 || (atIndex == isLength - 1)) {				return false;			}			// check existance of .			var pIndex : int = isValue.lastIndexOf(".");			if (pIndex < 4 || (pIndex == isLength - 1) || pIndex <= (atIndex + 1)) {				return false;			}			// check existence of . after @			if (atIndex > pIndex) {				return false;			}			return true;		}	}}