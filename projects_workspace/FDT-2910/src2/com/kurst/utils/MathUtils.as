package com.kurst.utils {	/**	 * @author karimbeyrouti	 */	public class MathUtils {		//		// p = point  ::  t = target  ::  c = constant		static public function chase(p : Number, t : Number, c : Number) : Number {			var d : Number = p + (t - p) / c;			return (d);		}		// p = point  ::  t = target  ::  d = distance  :: c = constant  ::  v = velocity  :: f = friction		static public function flex(p : Number, t : Number, d : Number, c : Number, v : Number, f : Number) : Object {			var obj : Object = {d:(((t - p) / c) * v) + (d * f), p:p + d};			return (obj);		}		//		static public function getMagnitude(x1 : Number, y1 : Number, x2 : Number, y2 : Number) : Number {			var d : Number = Math.abs(Math.sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1)));			return (d);		}		// a = a_point  ::  b = b_point		static public function myAngle(ax : Number, bx : Number, ay : Number, by : Number) : Number {			var c : Number = Math.atan2((ay - by), (ax - bx)) * 180 / Math.PI ;			return (c);		}	}}