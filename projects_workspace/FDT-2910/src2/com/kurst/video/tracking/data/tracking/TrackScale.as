package com.kurst.video.tracking.data.tracking {
	public class TrackScale {
		// ------------------------------------------------------------------------------------------------------------------------------------------------------------
		public var trackPointID : int;
		public var trackFrames : Vector.<TrackPoint>;

		// ------------------------------------------------------------------------------------------------------------------------------------------------------------
		public function TrackScale() : void {
			trackFrames = new Vector.<TrackPoint>();
		}

		// ------------------------------------------------------------------------------------------------------------------------------------------------------------
		// -PUBLIC-----------------------------------------------------------------------------------------------------------------------------------------------------
		// ------------------------------------------------------------------------------------------------------------------------------------------------------------
		/**
		 * @method addFrameData( frame : int , scaleX: Number , scaleY: Number  ) : void
		 * @tooltip add a tracking frame 
		 * @param frame : int - id of frame
		 * @param scaleX: Number - scaleX of tracking point
		 * @param scaleY: Number - scaleY of tracking point
		 */
		public function addFrameData(frame : int, scaleX : Number, scaleY : Number) : void {
			trackFrames.push(new TrackPoint(frame, 0, 0, scaleX, scaleY));
		}

		/**
		 * @method 
		 * @tooltip 
		 * @param 
		 * @return
		 */
		public function getScaleData(frame : int) : TrackPoint {
			if ( frame < 0 ) {
				return null;
			} else if ( frame > trackFrames.length - 1 ) {
				return null;
			} else {
				return trackFrames[frame];
			}
		}
	}
}