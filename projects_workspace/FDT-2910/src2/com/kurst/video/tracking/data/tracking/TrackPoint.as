package com.kurst.video.tracking.data.tracking {
	public class TrackPoint {
		// ------------------------------------------------------------------------------------------------------------------------------------------------------------
		public var frame : int;
		// Frame ID / Data ( from text file )
		public var x : Number;
		// Track Point XPosition
		public var y : Number;
		// Track Point YPosition
		public var scaleX : Number;
		public var scaleY : Number;

		// ------------------------------------------------------------------------------------------------------------------------------------------------------------
		public function TrackPoint(f : int, xp : Number = 1, yp : Number = 1, sx : Number = 1, sy : Number = 1) {
			frame = f;
			x = xp;
			y = yp;
			scaleX = sx;
			scaleY = sy;
		}
	}
}