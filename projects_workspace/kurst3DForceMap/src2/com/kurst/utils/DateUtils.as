package com.kurst.utils {	/**	 * @author karimbeyrouti	 */	public class DateUtils {		private static var pXMonthNames : Array = ['jan', 'feb', 'mar', 'apr', 'may', 'jun', 'jul', 'aug', 'sep', 'oct', 'nov', 'dec'];		private static var pXDayNames : Array = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];		public static function convertPixelPostDate(str : String) : Date {			var date : Number = Number(str.substr(5, 2));			var monthName : String = str.substr(8, 3).toLowerCase();			var year : Number = Number(str.substr(12, 4));			var hours : Number = Number(str.substr(17, 2));			var mins : Number = Number(str.substr(20, 2));			for ( var c : int = 0 ; c < pXMonthNames.length ; c++ ) {				if ( pXMonthNames[c] == monthName )					var monthID : int = c;			}			return new Date(year, monthID, date, hours, mins);		}		public static function convertToPixelPostDate(d : Date) : String {			var dateString : String = "";			dateString += pXDayNames[d.getDay()] + ', ';			dateString += d.getDate() + ' ';			dateString += pXMonthNames[d.getMonth()] + ' ';			dateString += d.getFullYear() + ' ';			dateString += ( d.getHours() < 10 ) ? '0' + String(d.getHours()) + ':' : d.getHours() + ':';			dateString += ( d.getMinutes() < 10 ) ? '0' + String(d.getMinutes()) + ' ' : d.getMinutes() + ' ';			dateString += '+0000';			return dateString;		}	}}